#!/usr/bin/env bash
set -eo pipefail

export DEBUG=${DEBUG:-false}
[[ "${DEBUG}" == "true" ]] && set -x

echo -e "\nConfigure Container ..."

for FILE in $(find /usr/local/bin/container-entrypoint.d/entrypoint.d -iname \*.sh | sort); do
  source ${FILE}
done

for FILE in $(find /usr/local/bin/container-entrypoint.d/base.d -iname \*.sh | sort); do
  source ${FILE}
done

echo -e "\nContainer configured succesfully ...\n"

set -eu
cmd="$1"; shift
exec $cmd "$@"
